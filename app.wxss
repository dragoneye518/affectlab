.card-holo::before {
    content: "";
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: linear-gradient(
        45deg,
        rgba(255, 0, 0, 0),
        rgba(255, 0, 0, 0),
        rgba(255, 255, 255, 0.1),
        rgba(0, 255, 255, 0.2),
        rgba(255, 0, 255, 0.2),
