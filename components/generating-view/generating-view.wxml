<view class="fixed inset-0 z-80 bg-black flex flex-col items-center justify-center p-8 font-mono select-none">
  <view class="absolute inset-0 opacity-20 pointer-events-none bg-scanlines"></view>
  
  <view class="absolute top-8 right-8 flex items-center gap-1 text-neon-green text-xs border border-neon-green-30 px-2 py-1 rounded-full animate-pulse">
    <image src="https://api.iconify.design/lucide:shield-check.svg?color=%2300ff00" class="w-3 h-3" />
    <text>安全检测中...</text>
  </view>

  <view class="w-full max-w-xs mb-12 relative">
     <view class="absolute inset-0 bg-neon-green-20 blur-xl animate-pulse"></view>
     <image 
        src="{{template.imageUrl}}"
        class="w-full aspect-square object-cover rounded-full opacity-80 grayscale mix-blend-luminosity border-4 border-dark-800 relative z-10" 
        mode="aspectFill"
    />
    <view class="absolute left-0 right-0 top-0 z-20 bg-gradient-scan h-10 animate-bounce-scan"></view>
  </view>
  
  <view class="w-full max-w-xs space-y-4">
    <view class="h-2 bg-dark-800 rounded-full overflow-hidden border border-white-10">
        <view 
            class="h-full bg-neon-green shadow-neon-green"
            style="width: {{progress}}%"
        ></view>
    </view>
    
    <view class="h-32 font-mono text-xs text-neon-green-80 overflow-hidden flex flex-col justify-end">
        <block wx:for="{{logs}}" wx:key="index">
            <view class="animate-slide-in-left">{{item}}</view>
        </block>
        <view class="animate-pulse">_</view>
    </view>
  </view>
</view>
