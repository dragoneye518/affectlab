<view class="fixed bottom-0 left-0 right-0 z-50 bg-dark-900 border-t border-white-10 safe-bottom touch-none">
  <view class="flex justify-around items-center h-16">
    <!-- Home Tab -->
    <view 
      bindtap="goHome"
      class="flex flex-col items-center gap-1 transition-colors active-scale-90 duration-200 {{view === 'HOME' ? 'text-neon-blue' : 'text-gray-500'}}"
    >
      <image src="https://api.iconify.design/lucide:layout-grid.svg?color=%23{{view === 'HOME' ? '00ffff' : '6b7280'}}" class="w-6 h-6" />
      <text class="text-xs font-bold">胶囊</text>
    </view>
    
    <!-- Backpack Tab -->
    <view 
      bindtap="goPack"
      class="flex flex-col items-center gap-1 transition-colors active-scale-90 duration-200 {{view === 'PACK' ? 'text-neon-pink' : 'text-gray-500'}}"
    >
      <image src="https://api.iconify.design/lucide:backpack.svg?color=%23{{view === 'PACK' ? 'ff00ff' : '6b7280'}}" class="w-6 h-6" />
      <text class="text-xs font-bold">背包</text>
    </view>

    <!-- Profile Tab -->
    <view 
      bindtap="goProfile"
      class="flex flex-col items-center gap-1 transition-colors active-scale-90 duration-200 {{view === 'PROFILE' ? 'text-neon-green' : 'text-gray-500'}}"
    >
      <image src="https://api.iconify.design/lucide:user.svg?color=%23{{view === 'PROFILE' ? '00ff00' : '6b7280'}}" class="w-6 h-6" />
      <text class="text-xs font-bold">我的</text>
    </view>
  </view>
</view>
