<view 
  class="relative group overflow-hidden rounded-2xl bg-dark-800 border border-white-10 active-scale-95 transition-transform duration-200 touch-manipulation hover-border-white-30"
  bindtap="onSelect"
>
  <view class="aspect-4-5 w-full relative overflow-hidden">
    <image 
      src="{{template.imageUrl}}" 
      class="w-full h-full object-cover transition-transform duration-500 group-hover-scale-110" 
      mode="aspectFill"
    />
    
    <view class="absolute inset-0 bg-gradient-overlay opacity-90"></view>
    
    <!-- Tag -->
    <view class="absolute top-2 left-2 px-2 py-0-5 rounded text-xs font-black italic tracking-wider shadow-lg {{tagClass}}">
      {{template.tag}}
    </view>
  </view>

  <view class="absolute bottom-0 left-0 right-0 p-4">
    <view class="flex items-center gap-2 mb-1">
        <text class="text-xs-mini px-1-5 py-0-5 rounded font-bold uppercase border {{categoryClass}}">{{template.category}}</text>
    </view>
    <view class="text-xl font-black italic text-white mb-1 drop-shadow-md">{{template.title}}</view>
    <view class="text-xs text-gray-300 mb-3 line-clamp-1">{{template.description}}</view>
    
    <view class="flex items-center justify-between">
      <view class="flex items-center gap-1 bg-black-50 backdrop-blur px-2 py-1 rounded text-xs text-neon-yellow font-bold border border-neon-yellow-30">
        <image src="https://api.iconify.design/lucide:candy.svg?color=%23ffff00" class="w-3 h-3" />
        <text>-{{template.cost}}</text>
      </view>
      <view class="btn-neon-blue-glow bg-white text-black px-4 py-1-5 rounded-full text-xs font-bold hover-bg-neon-blue transition-colors">
        PLAY
      </view>
    </view>
  </view>
</view>
